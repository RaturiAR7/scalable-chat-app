generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id
  name      String
  messages  Message[]
}

model Room {
  id        String       @id
  name      String
  isGlobal  Boolean   @default(false)
  messages  Message[]
}

model Message {
  id        String       @id 
  text      String
  createdAt DateTime  @default(now())

  // Relations
  roomId    String
  room      Room      @relation(fields: [roomId], references: [id])

  senderId  String
  sender    User      @relation(fields: [senderId], references: [id])
}